<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MovieListActivity">
    
        <include layout="@layout/common_loading" />
    
        <ImageView
            android:id="@+id/posterPath"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello 1111"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/posterPath"
            />
    
        <TextView
            android:id="@+id/moviePopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="popular 333.76"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            />

        <TextView
            android:id="@+id/movieLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lang: English"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/moviePopular"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            />
        <TextView
            android:id="@+id/movieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Release: 2022-03-04"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/movieLanguage"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            />

        <TextView
            android:id="@+id/movieRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rate: 0.45"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/moviePopular"
            app:layout_constraintTop_toBottomOf="@+id/moviePopular"
            />

        <TextView
            android:id="@+id/movieRateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="VoteNum: 2000"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/movieRate"
            app:layout_constraintTop_toBottomOf="@+id/moviePopular"
            />

    <TextView
        android:id="@+id/movieOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        tools:text="hello woldfd sfsdf sdfsdf sdfsdf"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/movieRate"
        app:layout_constraintTop_toBottomOf="@+id/movieRate"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>